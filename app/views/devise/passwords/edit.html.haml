.container-fluid
  .row
    .col
      %h2 Changer votre mot de passe
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
        = render "devise/shared/error_messages", resource: resource
        = f.hidden_field :reset_password_token
        .field
          = f.label :password, t('new_password')
          %br/
          - if @minimum_password_length
            %em
              (#{@minimum_password_length} #{'caracteres au minimum)'}
            %br/
          = f.password_field :password, autofocus: true, autocomplete: "Nouveau mot de passe"
        .field
          = f.label :password_confirmation, "Confirmer le nouveau mot de passe"
          %br/
          = f.password_field :password_confirmation, autocomplete: "Nouveau mot de passe"
        .actions
          = f.submit "Changer mon mot de passe", class: 'btn btn-primary'
      = render "devise/shared/links"
